<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{text}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Comments:</h3>
{{#each comments as |comment| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <p class="text-black">
      {{comment.comment_text}}
    </p>
    <p class="text-black">Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
{{/each}}
{{#if logged_in}}
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-text">text content:</label>
        <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  {{/if}}
  </div>
<script src="../public/js/comment.js"></script>